{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["*.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/tests/*", "node_modules"],
  "compilerOptions": {
    "rootDir": "..",
    "strict": true,
    "composite": true,
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "@/*": ["./src/*"],
      "@server/*": ["../server/src/*"]
    }
  }
}
