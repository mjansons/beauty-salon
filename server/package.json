{
  "name": "wink-mono-server",
  "version": "1.0.0",
  "main": "loader.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npx tsc-alias",
    "coverage": "vitest run --coverage",
    "dev": "tsx watch src",
    "format": "prettier --write \"src/**/*.ts\"",
    "gen:types": "kysely-codegen --camel-case --dialect postgres --out-file src/database/types.ts && prettier --write src/database/types.ts",
    "migrate:new": "tsx ./src/database/migrate/new",
    "migrate:latest": "tsx src/database/migrate/latest",
    "migrate:latest:prod": "npm run node-es dist/database/migrate/latest.js",
    "node-es": "node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL } from \"node:url\"; register(\"./loader.js\", pathToFileURL(\"./\"));'",
    "prod": "npm run migrate:latest:prod && npm run start",
    "start": "npm run node-es ./dist/index.js",
    "test": "vitest",
    "test:safe": "vitest --no-file-parallelism --maxWorkers 1 --poolOptions.threads.useAtomics false --poolOptions.threads.isolate true",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix",
    "reset-test-db": "psql postgres://postgres:1234@localhost:5432/template1 -c 'DROP DATABASE IF EXISTS test_beauty_salons' -c 'CREATE DATABASE test_beauty_salons' && npm run migrate:latest",
    "reset-db": "psql postgres://postgres:1234@localhost:5432/template1 -c 'DROP DATABASE IF EXISTS beauty_salons' -c 'CREATE DATABASE beauty_salons' && npm run migrate:latest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.3",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-v8": "^2.0.5",
    "chance": "^1.1.12",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "kysely-codegen": "^0.15.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript-eslint": "^8.3.0",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.4",
    "pg": "^8.12.0",
    "superjson": "^2.2.1",
    "trpc": "^0.8.2",
    "trpc-panel": "^1.3.4",
    "typescript": "^5.5.4",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.1"
  }
}
